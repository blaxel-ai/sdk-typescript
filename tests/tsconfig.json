{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "runtime-environments", "runtime"]
}
